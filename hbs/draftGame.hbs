<a name="game-{{id}}"></a>
<div class="game card mb-3">
    <div class="row no-gutters">
        <div class="col-md-2"  style="max-width: 100px; margin: auto 0 auto">
            <img src="/img/activity-{{activityType}}.png" class="card-img" alt="{{activityType}}" width="100">
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <h5 class="card-title text-danger">{{activityName}}<div class="float-right">Draft</div></h5>

                <div class="row">
                    <div class="col-md-2">Platform</div>
                    <div class="col-md-10">
                        <img src="/img/platform-{{platform}}@32.png">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-2">Date</div>
                    <div class="col-md-10">
                        {{displayDate}} @ {{displayStartTime}} - {{displayEndTime}}
                    </div>
                </div>


                <div class="row" style="margin-top: 20px; margin-bottom: 20px">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button class="btn btn-danger" onclick="controller.publishGame('{{id}}', this)">Publish</button>
                        <button class="btn btn-danger" onclick="controller.editGame('{{id}}', this)">Edit</button>
                    </div>
                </div>

                <p class="card-text"><small class="text-muted">Last updated {{displayUpdatedOn}}</small></p>
            </div>
        </div>
    </div>
</div>